<!-- Validation failure messages -->
<% if @machine.present? %>
  <% if @machine.errors.any? %>
    <% @machine.errors.full_messages.each do |message| %>
      <div class="alert alert-danger">
        <%= message %>
      </div>
    <% end %>
  <% end %>
<% end %>

<h1>
  Add a new machine
</h1>


<hr>

<form action="/create_machine" method="post">

  <div class="form-group">
    <label for="name">
      Name
    </label>

    <input type="text" id="name" name="name" placeholder= "Add the brand and model..." class="form-control" value="<%= @machine.name %>">
  </div>

  <div class="form-group">
    <label for="price">
      Price
    </label>

    <input type="text" id="price" name="price" placeholder= "Add price without dollar sign and with one decimal..."  class="form-control" value="<%= @machine.price %>">
  </div>

  <div class="form-group">
    <label for="service">
      Service
    </label>

    <input type="text" id="service" name="service" placeholder= "Add provided service" class="form-control" value="<%= @machine.service %>">
  </div>

  <div class="form-group">
    <label for="photo">
      Photo
    </label>

    <input type="text" id="photo" name="photo" placeholder= "Add an url..." class="form-control" value="<%= @machine.photo %>">
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Create machine
  </button>
</form>

<hr>

<a href="/machines">
  Go back
</a>
