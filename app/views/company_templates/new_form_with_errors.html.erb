<!-- Validation failure messages -->
<% if @company.present? %>
  <% if @company.errors.any? %>
    <% @company.errors.full_messages.each do |message| %>
      <div class="alert alert-danger">
        <%= message %>
      </div>
    <% end %>
  <% end %>
<% end %>

<h1>
  Add a new company
</h1>


<hr>

<form action="/create_company" method="post">

    <div class="form-group">
    <label for="title">
      Title
    </label>

    <textarea id="title" name="title" placeholder= "Add a title..." class="form-control" rows="3"><%= @company.title %></textarea>
  </div>
  
  
  <div class="form-group">
    <label for="caption">
      Caption
    </label>

    <textarea id="caption" name="caption" placeholder="Add a short description..."  class="form-control" rows="3"><%= @company.caption %></textarea>
  </div>
  
  <div class="form-group">
    <label for="photo">
      Photo
    </label>

    <input type="text" id="photo" name="photo" placeholder= "Add an url..." class="form-control" value="<%= @company.photo %>">
  </div>



  <button class="btn btn-block btn-outline-secondary">
    Create company
  </button>
</form>

<hr>

<a href="/companies">
  Go back
</a>
