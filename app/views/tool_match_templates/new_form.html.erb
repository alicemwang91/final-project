<!-- Validation failure messages -->
<% if @tool_match.present? %>
  <% if @tool_match.errors.any? %>
    <% @tool_match.errors.full_messages.each do |message| %>
      <div class="alert alert-danger">
        <%= message %>
      </div>
    <% end %>
  <% end %>
<% end %>

<h1>
  Add a new tool match
</h1>


<hr>

<form action="/create_tool_match" method="post">

  <div class="form-group">
    <label for="beans_id">
      Beans
    </label>
      <%= select_tag("beans_id", options_from_collection_for_select(Bean.all, :id, :name, @tool_match.try(:beans_id)), :class => "form-control") %>
      or <a href = "/beans/new"> Add a new bean </a> first
  </div>

  <div class="form-group">
    <label for="tools_id">
      Tools
    </label>
      <%= select_tag("tools_id", options_from_collection_for_select(Tool.all, :id, :name, @tool_match.try(:tools_id)), :class => "form-control") %>
      or <a href = "/tools/new"> Add a new tool </a> first
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Create tool match
  </button>
</form>

<hr>

<a href="/tool_matches">
  Go back
</a>
