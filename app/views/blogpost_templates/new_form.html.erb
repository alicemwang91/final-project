<!-- Validation failure messages -->
<% if @blogpost.present? %>
  <% if @blogpost.errors.any? %>
    <% @blogpost.errors.full_messages.each do |message| %>
      <div class="alert alert-danger">
        <%= message %>
      </div>
    <% end %>
  <% end %>
<% end %>

<h1>
  Add a new blog post
</h1>


<hr>

<form action="/create_blogpost" method="post">

  <div class="form-group">
    <label for="caption">
      Caption
    </label>

    <textarea id="caption" name="caption" placeholder="Add a caption..." class="form-control" rows="2"></textarea>
  </div>

  <div class="form-group">
    <label for="image">
      Image
    </label>

    <input type="text" id="image" name="image" placeholder="Add a url..." class="form-control" rows="5">
  </div>
  
  <div class="form-group">
    <label for="body">
      Content
    </label>

    <textarea id="body" name="body" placeholder="Add the body of the post..." class="form-control" rows="10"></textarea>
  </div>

  <div class="form-group">
    <input type="hidden" id="user_id" name="user_id" class="form-control", value="<%= current_user.try(:id) %>">
  </div>
  
  <button class="btn btn-block btn-outline-secondary">
    Create blog post
  </button>
</form>

<hr>

<a href="/blogposts">
  Go back
</a>
