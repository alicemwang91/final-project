<!-- Validation failure messages -->
<% if @bean.present? %>
  <% if @bean.errors.any? %>
    <% @bean.errors.full_messages.each do |message| %>
      <div class="alert alert-danger">
        <%= message %>
      </div>
    <% end %>
  <% end %>
<% end %>

<h1>
  Add a new bean
</h1>


<hr>

<form action="/create_bean" method="post">

  <div class="form-group">
    <label for="bane">
      Name
    </label>

    <input type="text" id="name" name="name" class="form-control">
  </div>

  <div class="form-group">
    <label for="origin">
      Origin
    </label>

    <input type="text" id="origin" name="origin" class="form-control">
  </div>

  <div class="form-group">
    <label for="roast">
      Roast
    </label>

    <input type="text" id="roast" name="roast" class="form-control">
  </div>

  <div class="form-group">
    <label for="process_method">
      Process method
    </label>

    <input type="text" id="process_method" name="process_method" class="form-control">
  </div>

  <div class="form-group">
    <label for="flavor">
      Flavor
    </label>

    <input type="text" id="flavor" name="flavor" class="form-control">
  </div>

  <div class="form-group">
    <label for="altitude">
      Altitude
    </label>

    <input type="text" id="altitude" name="altitude" class="form-control">
  </div>

  <div class="form-group">
    <label for="precipitation">
      Precipitation
    </label>

    <input type="text" id="precipitation" name="precipitation" class="form-control">
  </div>

  <div class="form-group">
    <label for="instruction">
      Instruction
    </label>

    <textarea id="instruction" name="instruction" class="form-control" rows="3"></textarea>
  </div>

  <div class="form-group">
    <label for="recommended_machine_id">
      Recommended machine
    </label>
      <%= select_tag("machine_id", options_from_collection_for_select(Machine.all, :id, :name, @movie.try(:recommended_machine_id)), :class => "form-control") %>
      or <a href = "/machines/new"> Add a new machine</a> first
  </div>

  <div class="form-group">
    <label for="photo">
      Photo
    </label>

    <input type="text" id="photo" name="photo" placeholder="Add a URL..." class="form-control">
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Create bean
  </button>
</form>

<hr>

<a href="/beans">
  Go back
</a>
